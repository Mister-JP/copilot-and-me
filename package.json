{
  "name": "copilot-frontend",
  "version": "1.0.0",
  "description": "AI-powered repository analysis frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "NODE_ENV=production next start",
    "prod": "NODE_ENV=production npm run build && npm run start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "precommit": "npm run validate",
    "logs:prod": "NODE_ENV=production npm start | jq -r '.' 2>/dev/null || npm start",
    "clean": "rm -rf .next node_modules/.cache",
    "fresh": "npm run clean && npm install && npm run build"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "lucide-react": "^0.525.0",
    "next": "^14.0.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
